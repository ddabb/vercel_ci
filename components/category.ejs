<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Language" content="zh-CN">
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9093386396178901"
        crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>分类列表</title>
    <link rel="icon" href="../logo.svg" type="image/svg+xml">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/footer.css">
    <link rel="stylesheet" href="../css/article.css">
    <script async src="https://busuanzi.ibruce.info/busuanzi/2.3/busuanzi.pure.mini.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        crossorigin="anonymous"></script>
    <script src="../js/clarity.js"></script>

    <!-- 引入Masonry -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.2.2/masonry.pkgd.min.js"></script>
    <style>
        /* 新增列宽基准元素 */
        .grid-sizer,
        .grid-item {
            width: calc((100% - 20px) / 3);
            /* 三列布局计算修正 */
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        @media (max-width: 768px) {

            .grid-sizer,
            .grid-item {
                width: calc((100% - 10px) / 2);
                /* 两列布局 */
            }
        }

        @media (max-width: 576px) {

            .grid-sizer,
            .grid-item {
                width: 100%;
                /* 单列布局 */
            }
        }
    </style>

</head>

<body>
    <%- headerContent %>

        <main class="container-fluid mt-4">
            <div class="row">
                <div class="col-lg-8 col-md-12 mx-auto">
                    <!-- 面包屑导航 -->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="分类列表.html">分类列表</a></li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <%= category %>
                            </li>
                        </ol>
                    </nav>

                    <!-- 分类内容卡片 使用 Masonry 布局 -->
                    <div class="grid">
                        <div class="grid-sizer"></div>
                        <% articles.forEach(function(article){ %>
                            <div class="grid-item">
                                <div class="card shadow-sm">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="bi bi-file-earmark-text"></i>
                                            <a href="../mdhtml/<%= article.name.replace(/\.md$/, '.html') %>"
                                                class="text-decoration-none">
                                                <%= article.title %>
                                            </a>
                                        </h5>
                                        <% if (article.description){%>
                                            <p class="card-text">
                                                <%= article.description %>
                                            </p>
                                            <% } %>
                                                <% if (article.birthtime) { %>
                                                    <small class="text-muted">
                                                        <%= new Date(article.birthtime).toISOString().split('T')[0] %>
                                                    </small>
                                                    <% } else { %>
                                                        <small class="text-muted">未知日期</small>
                                                        <% } %>
                                    </div>
                                    <div class="card-footer text-muted">
                                        <a href="/category/<%= encodeURIComponent(article.category.trim()) %>.html"
                                            class="badge bg-primary">
                                            <%= article.category %>
                                        </a>
                                        <% article.tags.forEach(function(tag) { %>
                                            <a href="/tag/<%= encodeURIComponent(tag.trim()) %>.html"
                                                class="badge tag-link">
                                                <%= tag.trim() %>
                                            </a>
                                            <% }); %>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>

                    <!-- 返回按钮 -->
                    <div class="mt-4 text-center">
                        <a href="分类列表.html" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left"></i> 返回分类列表
                        </a>
                    </div>
                </div>
            </div>
        </main>

        <%- footerContent %>

            <script>
                // 初始化 Masonry
                document.addEventListener('DOMContentLoaded', function () {
                    document.addEventListener('DOMContentLoaded', function () {
                        var elem = document.querySelector('.grid');
                        var msnry = new Masonry(elem, {
                            itemSelector: '.grid-item',
                            columnWidth: '.grid-sizer', // 指向列宽基准
                            percentPosition: true,
                            gutter: 10
                        });
                    });
                });
            </script>
</body>

</html>